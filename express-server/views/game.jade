!!!5
html
  head
    title #{title}
    link(rel='stylesheet', href='stylesheets/stylesheet.css')
    link(rel="shortcut icon", href="images/purzen_Icon_with_question_mark_Clip_Art.ico")
    script(src='/libs/jquery/jquery.min.js')
    script(type='text/javascript', src='javascripts/GuessQuery.js')

  body
    #wrapper
      #opponent
      #head
        h1 GuessMe!
      <br/>
      center
        p #{user.userName} -vs- #{opponent}
      #guessWindow
        #guessToScroll.list
      #chatWindow
        #chatToScroll.list
      center
        table#board
      table#formatBottom
        tr
          td
            form(name='guessForm')
              #rButtons
                input(type='radio', name='respTF', value='Yes', id='yrb')
                | Yes
                br
                input(type='radio', name='respTF', value='No', id='nrb')
                | No
                br
              input#guessInput(type='text', name='guessItem', onkeypress='return runGuess(event)')
            #guessButton Guess!
          td#centerCell
            b
              |Place your guess:
              form(name='finalGuessForm')
                input#finalInput(type='text', name='finalItem', onkeypress='return runFinalGuess(event)')
              |If you're wrong, you lose!
          td
            form(name='chatForm')
              input#chatInput(type='text', name='chatItem', onkeypress='return runChat(event)')
            #chatButton Send!
        tr
          td
            #yourCard
      center
